<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/checked"
            android:layout_width="54dp"
            android:layout_height="56dp"
            android:layout_marginTop="4dp"
            app:layout_constraintHorizontal_bias="0.781"
            app:layout_constraintLeft_toRightOf="@id/titleshow"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"></androidx.appcompat.widget.AppCompatCheckBox>

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/profile"
            android:layout_width="68dp"
            android:layout_height="73dp"
            android:src="@drawable/user1"
            app:civ_border_color="#000"
            app:civ_border_width="2dp"
            app:civ_shadow_color="#3f51b5"
            app:civ_shadow_radius="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
    android:id="@+id/titleshow"
    android:layout_width="242dp"
    android:layout_height="34dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="80dp"
    android:layout_marginRight="80dp"
    android:text="Dark Riders"
    android:textAppearance="@style/TextAppearance.AppCompat.Large"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@+id/profile"
    app:layout_constraintTop_toTopOf="parent"></TextView>

    <TextView
        android:id="@+id/descshow"
        android:layout_width="241dp"
        android:layout_height="31dp"
        android:text="Dark Riders"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@id/titleshow"
        app:layout_constraintStart_toStartOf="@id/titleshow"
        app:layout_constraintTop_toBottomOf="@id/titleshow"></TextView>
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>